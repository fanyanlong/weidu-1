<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/back"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/linear_guan_movie"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/back_jiitem"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_height="@dimen/dp_121">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/image_more_gzyy"
            app:roundedCornerRadius="@dimen/dp_5"
            android:layout_margin="@dimen/dp_10"
            android:layout_width="@dimen/dp_84"
            android:layout_height="@dimen/dp_101"/>
        <LinearLayout
            android:layout_marginLeft="@dimen/dp_114"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="#fff"
                android:textSize="@dimen/sp_14"
                android:id="@+id/text_show_more_gzyy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="#fff"
                android:textSize="@dimen/sp_12"
                android:id="@+id/text_show_2_more_gzyy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/guan_tv_delete"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_19"
        android:background="@drawable/del"
        android:text="X"
        android:gravity="center"
        android:textColor="#fff"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"/>
</RelativeLayout>

