<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".XzActivity"
    android:orientation="vertical"
    android:background="@color/dark"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rela"
                android:layout_width="360dp"
                android:layout_height="200dp"
                >
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/xuanzuo_fanhui"
                    android:layout_width="24dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/back2"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="24dp"
                    />

                <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
                    android:id="@+id/imgseactseat"
                    android:layout_width="360dp"
                    android:layout_height="200dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:id="@+id/xuan_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#fff"
                    android:text="复仇者联盟4:终局之战"
                    />
                <LinearLayout
                    android:id="@+id/linear1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@id/xuan_name"
                    android:layout_marginRight="59dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#fff"
                        android:text="时长"
                        android:layout_marginTop="15dp"
                        />
                    <TextView
                        android:id="@+id/xuanzuo_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#fff"
                        android:text="182分钟"
                        android:layout_marginTop="5dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/linear1"
                    android:layout_below="@id/xuan_name"
                    android:layout_marginRight="59dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#fff"
                        android:text="评分"
                        android:layout_marginTop="15dp"
                        />
                    <TextView
                        android:id="@+id/xuanzuo_fen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#fff"
                        android:text="8.9分"
                        android:layout_marginTop="5dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/linear2"
                    android:layout_below="@id/xuan_name"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#fff"
                        android:text="导演"
                        android:layout_marginTop="15dp"
                        />
                    <TextView
                        android:id="@+id/xuanzuo_daoyan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#fff"
                        android:text="安东尼•罗素   乔•罗素"
                        android:layout_marginTop="5dp"
                        />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/xuanzuo_quyu"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:paddingLeft="24dp"
                    android:text="请选择区域"
                    android:textSize="14sp"
                    android:textColor="#fff"
                    android:gravity="center_vertical"
                    />

                <TextView
                    android:id="@+id/xuanzuo_shijian"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="45dp"
                    android:textSize="14sp"
                    android:text="请选择日期"
                    android:textColor="#fff" />

                <RadioButton
                    android:id="@+id/xuanzuo_price"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:button="@null"
                    android:paddingLeft="45dp"
                    android:text="价格最低"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    />
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/img_seatsesrach"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@mipmap/icon_search"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="28dp"
                    android:layout_marginRight="24dp"
                    />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/xuanzuo_rlv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>