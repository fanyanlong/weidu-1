<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FkcgActivity"
    android:orientation="vertical"
    android:background="@color/dark"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/title_fanhui"
            android:layout_marginLeft="@dimen/dp_28"
            android:src="@mipmap/back2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_marginLeft="@dimen/dp_104"
            android:textSize="@dimen/sp_16"
            android:textColor="#fff"
            android:id="@+id/title_biaoti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="意见反馈"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@mipmap/group1"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提交成功"
        android:textSize="16dp"
        android:layout_gravity="center"
        android:layout_marginTop="27dp"
        android:textColor="@color/white"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#deffffff"
        android:lineSpacingExtra="8sp"
        android:gravity="center_horizontal"
        tools:text="感谢您对维度影院的关注与支持，我们会认真处理您问题，尽快修复和完善相关功能。"
        android:layout_marginTop="24dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        />
</LinearLayout>